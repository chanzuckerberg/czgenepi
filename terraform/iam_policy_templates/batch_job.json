{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:List*",
        "s3:GetObject*"
      ],
      "Resource": [
        "arn:aws:s3:::aegea-batch-jobs-${AWS_ACCOUNT_ID}",
        "arn:aws:s3:::aegea-batch-jobs-${AWS_ACCOUNT_ID}/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:List*",
        "s3:GetObject*",
        "s3:PutObject*",
        "s3:CreateMultipartUpload"
      ],
      "Resource": [
        "arn:aws:s3:::aspen*",
        "arn:aws:s3:::aspen*/*"
      ]
    }
  ]
}
